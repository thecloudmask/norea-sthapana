rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuthenticated() && (getUserData().role == 'admin' || getUserData().role == 'super_admin');
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && getUserData().role == 'super_admin';
    }
    
    function isStaff() {
      return isAuthenticated() && (getUserData().role == 'staff' || isAdmin());
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || (request.auth.uid == userId);
    }

    // Articles / Ceremonies
    match /articles/{articleId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
    }

    // Construction Projects
    match /projects/{projectId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
      
      // Project donations
      match /donations/{donationId} {
        allow read: if isStaff();
        allow write: if isAdmin();
      }
      
      // Project expenses
      match /expenses/{expenseId} {
        allow read: if isStaff();
        allow write: if isAdmin();
      }
      
      // Project updates
      match /updates/{updateId} {
        allow read: if true; // Public read
        allow write: if isAdmin();
      }
    }

    // Ceremony Finance
    match /ceremonyIncomes/{incomeId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    match /ceremonyExpenses/{expenseId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    // Global fallback
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}
